# Environment configuration template for News Trending Tracker
# Copy this file to .env and update the values as needed

# BigQuery Configuration (used by both Terraform and Spark)
# TF_VAR_ prefix is used to pass variables to Terraform automatically
TF_VAR_bigquery_project_id=your-project-id
TF_VAR_bigquery_dataset_id=scraper_data
TF_VAR_bigquery_staging_dataset_id=staging_scraper_data
TF_VAR_bigquery_dataset_location=europe-west1

# Spark Configuration
SPARK_CHECKPOINT_LOCATION=/tmp/spark_checkpoint

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
