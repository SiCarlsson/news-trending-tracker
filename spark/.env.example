# Environment configuration template for Spark Application
# Copy this file to .env and update the values as needed

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_STARTING_OFFSETS=latest

# BigQuery Configuration
BIGQUERY_PROJECT_ID=your-project-id
BIGQUERY_DATASET=your-dataset-name
BIGQUERY_STAGING_DATASET=your-staging-dataset-name
BIGQUERY_CREDENTIALS_PATH=/path/to/your/service-account.json

# Spark Configuration
SPARK_APP_NAME=NewsStreamProcessor
SPARK_CHECKPOINT_LOCATION=/tmp/spark_checkpoint
SPARK_PROCESSING_TIME=10 seconds
SPARK_MASTER_URL=localhost:7077